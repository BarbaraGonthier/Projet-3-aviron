{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Réinitialiser mon mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container">
        <h1 class="text-center my-5">Réinitialiser mon mot de passe</h1>
        <div class="row">
            <div class="col-8 offset-2">
                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                            Entrez votre adresse email ci-dessus, un lien vous sera envoyé par email pour changer votre mot de passe
                        </small>
                    </div>
                    <button class="btn btn-primary mt-4">Confirmer</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}