{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Réinitialiser mon mot de passe{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center my-5">Réinitialiser mon mot de passe</h1>
    <div class="row">
        <div class="col">
            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button class="btn btn-primary">Réinitialiser</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
</div>
{% endblock %}
