{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Mon profil{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="text-center my-5">Mon profil</h1>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Mes informations de connexion
                    </div>
                    <div class="card-body">
                        <h5 class="card-title pt-3">Mon adresse email : {{ app.user.email }}</h5>
                        <p class="card-text">Mon type d'accès :
                            {% if is_granted('ROLE_ADMIN') %}
                                Administrateur
                            {% elseif is_granted('ROLE_USER') %}
                                Utilisateur
                            {% endif %}</p>
                        <p>Mot de passe : <a href="{{ path('app_forgot_password_request') }}" class="font-weight-bold text-secondary"> Réinitialiser mon mot de passe</a></p>
                        <a href="{{ path('app_logout') }}" class="btn btn-primary mt-3 mb-3">Se déconnecter</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}